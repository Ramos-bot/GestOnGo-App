        {
            "label": "🌐 Open Replit in Browser",
            "type": "shell",
            "command": "start",
            "args": [
                "https://replit.com/@tiago1982santos/GestOnGo-App"
            ],
            "windows": {
                "command": "start",
                "args": [
                    "https://replit.com/@tiago1982santos/GestOnGo-App"
                ]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
